<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.f_materiap_nuevo">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="491dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="REGISTRO M. PRIMA"
            android:textColor="#ffffff"
            android:background="#10000000"
            android:textAlignment="center"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tV_nombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripcion:" />

        <EditText
            android:id="@+id/eT_nombreProducto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/tV_disponibilidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Disponibilidad:" />

        <EditText
            android:id="@+id/eT_disponibilidad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number" />

        <TextView
            android:id="@+id/tV_valorUnitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Valor Unitario:" />

        <EditText
            android:id="@+id/eT_valorUnitario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />


        <Button
            android:id="@+id/button_registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#CF3476"
            android:textColor="#ffffff"
            android:text="Registrar" />

    </LinearLayout>

</FrameLayout>