<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_bikini"
    tools:context=".VentaActivity">

    <LinearLayout
        android:layout_width="372dp"
        android:layout_height="514dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="0dp">

        <TextView
            android:id="@+id/textView44"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="VENTA"
            android:textColor="#ffffff"
            android:textAlignment="center"
            android:background="#10000000"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/tV_identificacionCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="IdentificaciÃ³n:" />

        <EditText
            android:id="@+id/eT_identificacionCliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text" />

        <TextView
            android:id="@+id/tV_listado_productos"
            android:layout_width="match_parent"
            android:layout_height="294dp"
            android:background="#10000000"
            android:text="lista productos" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/button_agregar_productos"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_producto_round" />

            <ImageButton
                android:id="@+id/button_confirmar_venta"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_confirmar_round" />

            <ImageButton
                android:id="@+id/button_descartar_ventas"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_deshacer_round" />

            <ImageButton
                android:id="@+id/button_buscar"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_buscar_round" />


            <ImageButton
                android:id="@+id/button_regresar_v"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_regresar_round" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="#10000000"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Agregar Producto"
                android:textColor="#CF3476"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Confirmar Venta"
                android:textColor="#CF3476"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Descartar Venta"
                android:textColor="#CF3476"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Consultar Venta"
                android:textColor="#CF3476"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Regresar"
                android:textColor="#CF3476"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>




</android.support.constraint.ConstraintLayout>