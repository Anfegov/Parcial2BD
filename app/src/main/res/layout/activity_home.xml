<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@drawable/ic_bikini">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="551dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="424dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/id_FrameLayout_Principal"
                android:layout_width="match_parent"
                android:layout_height="305dp"
                android:layout_weight="1">

            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/button_configuracion"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_configuracion_round" />

            <ImageButton
                android:id="@+id/button_ventas"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_venta_round" />

            <ImageButton
                android:id="@+id/button_salir"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#10000000"
                app:srcCompat="@mipmap/ic_launcher_salir_round" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#10000000"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/textView6"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Configuracion"
                android:textColor="#CF3476"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Ventas"
                android:textColor="#CF3476"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="55dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Salir"
                android:textColor="#CF3476"
                android:textAlignment="center" />
        </LinearLayout>




    </LinearLayout>


</android.support.constraint.ConstraintLayout>